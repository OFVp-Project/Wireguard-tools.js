{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/test*/**",
    "libs/**"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true
  }
}